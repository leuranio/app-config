colorscheme jellybeans
filetype indent on
syntax on
set relativenumber
set incsearch
set number
set ignorecase
set smartcase
set smoothscroll
set termguicolors
set cursorline
set colorcolumn=100
set spell 
set spelllang=en,pt_br
set mouse=a
set undolevels=1000
set tabstop=4
set shiftwidth=4
set expandtab
set autoindent
set smartindent
set endofline
set fileformat=unix
set backup
set backupdir=.
set encoding=utf-8


highlight ColorColumn guibg=lightgrey
